keywords = {Analysis ; Asphalt concrete ; Cities ; Environment ; Hot Temperature ; Humans ; Hydrocarbons ; Pavements ; Thermal properties ; Urban climatology ; Urban heat island ; Urban heat island causes ; Urban heat island consequences ; Urban heat island mitigation measures ; Urban heat islands ; Urbanization},
pages = {522-538},
publisher = {Elsevier Ltd},
title = {The urban heat island effect, its causes, and mitigation, with reference to the thermal properties of asphalt concrete},
